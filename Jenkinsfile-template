pipeline {
    agent {
        kubernetes {
            defaultContainer 'jnlp'
            //cloud 'kubernetes'
            containerTemplate {
                name 'kubectl'
                image 'lachlanevenson/k8s-kubectl:latest'
                commond: 'cat'
                ttyEnabled: true
            }
        }
    }
    stages {
        stage('Deploy') {
            steps {
                container('kubectl') {
                    echo "run container kubectl"
                    // kubectl apply here
                    sh "kubectl -n devops-tools get all"
                }
            }
        }
    }
}
